// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id   String @id @default(uuid())
  name String
  pets Pet[]

  @@map("cities")
}

model Pet {
  id             String       @id @default(uuid())
  name           String
  age            Int
  breed          String
  size           String
  description    String
  images         String[]
  city           City         @relation(fields: [cityId], references: [id])
  cityId         String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@map("pets")
}

model Organization {
  id       String @id @default(uuid())
  photo    String?
  name     String
  adress   String
  whatsapp String
  pets     Pet[]
  users    User[]

  @@map("organizations")
}

model User {
  id             String        @id @default(uuid())
  photo          String?
  name           String
  email          String        @unique
  password       String
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  @@map("users")
}
